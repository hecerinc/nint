// Sort with for loops

function sort(int[] arr) :: void {
	int n = len(arr);
	for (int i = 0; i < n-1; i = i + 1)  {
		for (int j = 0; j < n-i-1; j = j + 1)  {
			if (arr[j] > arr[j+1]) {
				// swap arr[j+1] and arr[i]
				int temp = arr[j];
				arr[j] = arr[j+1];
				arr[j+1] = temp;
			}
		}
	}
}


int[] arr = [64, 34, 25, 12, 22, 11, 90];
print(arr);
sort(arr);
print(arr);
